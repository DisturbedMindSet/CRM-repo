<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<link rel="stylesheet" href="/login.css" />

		<title>Login Form</title>
	</head>

	<body>
		<div class="container">
			<h1 class="title__color text-center">My APP</h1>
			<div class="wrapper">

				<form action="/auth/register" method="post" class="form" id="createAccount">
					<h2 class="form__title">Create Account</h2>
					<div class="form__message form__message--error"></div>
					<div class="form__input-group">
						<label for="username">Username</label>
						<input
							type="text"
							name="username"
							id="signupUsername"
							class="form__input"
							autofocus
							placeholder="Username"
						/>
						<div class="form__input-error-message"></div>
					</div>
					<div class="form__input-group">
						<label for="email">Email</label>
						<input
							type="email"
							id="checkEmail"
							name="email"
							class="form__input"
							autofocus
							placeholder="Email Address"
						/>
						<div class="form__input-error-message"></div>
					</div>

					<div class="form__input-group">
						<label for="password">Password</label>
						<input
							type="password"
							id="inputPass"
							name="password"
							class="form__input"
							required
							autofocus
							placeholder="Password"
						/>
						<div class="form__input-error-message"></div>
					</div>
					<div class="form__input-group">
						<label for="password">Confirm Password</label>
						<input
							type="password"
							name="Confirm password"
							id="checkPass"
							class="form__input"
							required
							autofocus
							placeholder="Confirm password"
						/>
						<div class="form__input-error-message"></div>
					</div>
					<button class="form__button" type="submit">Login</button>

					<div class="form__text">
						Already have an account!
						<a action="/getLogin" href="#" class="form__link" id="linkLogin">Sign In</a>
					</div>
				</form>
				<form class="form form--hidden" id="forgotPass">
					<h2 class="form__title">Are you having problems logging in?</h2>
					<p class="text-center">
						Enter your email, mobile number or username and we'll send you a link to regain access
						to your account.
					</p>
					<div class="form__message form__message--error"></div>
					<div class="form__input-group">
						<input type="text" class="form__input" autofocus placeholder="Enter your email...." />
						<div class="form__input-error-message"></div>
					</div>
					<div class="form__input-error-message"></div>

					<button class="form__button" type="button">
						<a class="form__link form__text--color" href="#">Continue</a>
					</button>
					<button id="linkReturn" class="form__button" type="button">
						<a href="#" class="form__link form__text--color">Return</a>
					</button>
				</form>
			</div>
		</div>

		<script type="text/javascript" src="/index.js"></script>
		<script type="text/javascript" src="../server/server.js"></script>
	</body>
</html>